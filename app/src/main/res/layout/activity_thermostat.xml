<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Thermostat"
    android:orientation="vertical"
    android:weightSum="8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1"
        android:baselineAligned="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="6"
            >

            <TextView
                android:id="@+id/currenttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CURRENT"
                android:textSize="40sp"
                android:layout_weight="2"
                android:gravity="bottom|center"
                />
            <ImageView
                android:id="@+id/currentmode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DAY"
                android:src="@drawable/sunpic"
                android:textSize="30sp"
                android:layout_weight="2"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/currenttemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="50.0 C"
                android:textSize="30sp"
                android:layout_weight="2"
                android:gravity="top|center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="6"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DAY"
                    android:textSize="30sp"
                    android:src="@drawable/bigsunpic"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/daytemp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50.0 C"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NIGHT"
                    android:src="@drawable/bigmoonpic"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/nighttemp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50.0 C"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical"
                >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="USER"
                    android:src="@drawable/biguserpic"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onUserTemp"
                    />

                <TextView
                    android:id="@+id/usertemp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="50.0 C"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:weightSum="9"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/calendarpic"
            android:textSize="20sp"
            android:layout_weight="3"
            android:gravity="center"
            android:onClick="setSchedule"

            />

        <ImageButton
            android:id="@+id/lockbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/biglockpic"
            android:text="LOCK"
            android:textSize="20sp"
            android:layout_weight="3"
            android:gravity="center"
            android:onClick="changeVacation"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/editpic"
            android:text="EDIT"
            android:scaleType="fitCenter"
            android:layout_weight="3"
            android:gravity="center"
            android:onClick="setNewUserTemp"
            />

    </LinearLayout>

</LinearLayout>
